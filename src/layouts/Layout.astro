---
import "../styles/global.css";
const { title = "TP7 • Observable Plot + Astro" } = Astro.props;
---
<!doctype html>
<html lang="fr" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Police soignée -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  </head>

  <body class="min-h-full bg-slate-950 text-slate-100 selection:bg-rose-400/30" style="font-family:Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, 'Apple Color Emoji','Segoe UI Emoji';">
    <!-- Header / nav -->
    <header class="sticky top-0 z-40 backdrop-blur supports-[backdrop-filter]:bg-slate-950/60 bg-slate-950/90 border-b border-white/10">
      <div class="max-w-6xl mx-auto px-5 h-14 flex items-center justify-between">
        <a href="/" class="font-semibold tracking-tight">TP7 • Observable Plot + Astro</a>
        <nav class="flex gap-2 text-sm">
          <a class="nav" href="/">Accueil</a>
          <a class="nav" href="/leaflet">Leaflet</a>
          <a class="nav" href="/population-serveur">Population (serveur)</a>
          <a class="nav" href="/population-client">Population (client)</a>
        </nav>
      </div>
    </header>

    <main class="max-w-6xl mx-auto px-5 py-8">
      <slot />
    </main>

    <footer class="mt-16 border-t border-white/10">
      <div class="max-w-6xl mx-auto px-5 py-6 text-sm text-slate-400">
        © {new Date().getFullYear()} — Fait avec Astro, Observable Plot & Leaflet.
      </div>
    </footer>
  </body>
</html>

<style>
  a.nav {
    padding: .25rem .625rem;
    border-radius: .5rem;
    border: 1px solid rgba(255,255,255,.12);
  }
  a.nav:hover { background: rgba(255,255,255,.06); }

  /* Tooltips Plot plus lisibles (pour tous les graphiques) */
  .plot-tooltip{
    color:#111; background:#fff; border-color:rgba(0,0,0,.25);
    box-shadow:0 6px 24px rgba(0,0,0,.25);
  }
</style>
